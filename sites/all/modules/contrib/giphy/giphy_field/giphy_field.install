<?php

/**
 * @file
 * Giphy Field installation code.
 */

/**
 * Implements hook_field_schema().
 */
function giphy_field_field_schema($field) {

  $columns = array(
    'value' => array(
      'type' => 'text',
      'size' => 'big',
      'not null' => FALSE,
    ),
  );

  return array(
    'columns' => $columns,
  );
}
